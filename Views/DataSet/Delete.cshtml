@model DataSet

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 style="color: black;">Вы действительно хотите удалить эту запись?</h2>
        </div>
      <!--  <div asp-validation-summary="All"></div> -->
        <div class="mb-3">
            <label asp-for="IN">Инвентарный Номер</label>
           <input asp-for="IN" disabled class="form-control" />
          
        </div>

        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-controller="DataSet" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
    </div>
</form>

@section Scripts{
    @{
      <partial name="_ValidationScriptsPartial"></partial>
    }
}
